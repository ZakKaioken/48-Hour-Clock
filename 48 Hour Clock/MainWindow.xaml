<Window x:Class="_48_Hour_Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_48_Hour_Clock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="797*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="TimeText" Content="43:42" Grid.Column="1" Margin="10,10,10,10" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Montserrat" Loaded="Label_Loaded"/>

    </Grid>
</Window>
